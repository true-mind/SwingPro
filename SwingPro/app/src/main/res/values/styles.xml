        <item name="android:background">@drawable/arrow_blue_right</item>
    </style>

    <style name="fragItemDetailArrowLeft">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/arrow_blue_left</item>
    </style>

    <style name="fragMyRecordCircleBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
