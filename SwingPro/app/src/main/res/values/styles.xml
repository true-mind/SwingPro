    <style name="space_hori">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="fragItemDetailTxt">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00008b</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/show_detail</item>
    </style>

    <style name="fragItemDetailMore">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00008b</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="fragItemDetailArrow">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">5dp</item>
