                                        style="@style/center14spBlackText"
                                        android:text="@string/myAvgRecord"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#000" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Table Row 2 End -->

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#000"/>

                            <!-- Table Row 3 Start -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tableRow3"
                                        style="@style/center14spBlackText"
                                        android:text="@string/measureStartDate"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#000" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Table Row 3 End -->

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#000"/>

                            <!-- Table Row 4 Start -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="30dp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tableRow4"
                                        style="@style/center14spBlackText"
                                        android:text="@string/timesMeasure"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#000" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Table Row 4 End -->

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>
        </LinearLayout>

        <include layout="@layout/sliding_menu" />
    </FrameLayout>
</LinearLayout>
