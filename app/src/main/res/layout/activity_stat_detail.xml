    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommonBack"
    android:orientation="vertical">

    <include layout="@layout/common_head" />

    <FrameLayout style="@style/m_m_Frame">

        <LinearLayout style="@style/m_m_Vertical">

            <ScrollView style="@style/m_m_NoScrollBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/m_none_fragItemBase"
                        android:layout_height="275dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/btnPrevious"
                                style="@style/fragItemDetailBaseLeft">

                                <ImageView style="@style/fragItemDetailArrowLeft" />

                                <TextView
                                    android:id="@+id/txtPrevious"
                                    style="@style/fragItemDetailMore"
                                    android:text="이전 기록 열람"/>

                            </LinearLayout>

                            <View style="@style/space_hori" />

                            <LinearLayout
                                android:id="@+id/btnNext"
                                style="@style/fragItemDetailBase">

                                <TextView
                                    android:id="@+id/txtNext"
                                    style="@style/fragItemDetailMore"
                                    android:text="다음 기록 열람" />

                                <ImageView style="@style/fragItemDetailArrow" />
                            </LinearLayout>


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/graph_detail"
                                android:layout_width="match_parent"
                                android:layout_height="140dp"
                                android:orientation="horizontal" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:background="@color/graphBase" />

                            <LinearLayout
                                android:id="@+id/graphBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                android:orientation="horizontal"
                                android:paddingTop="2dp">

                                <TextView
                                    android:id="@+id/para1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/domainBase"
                                    android:textColor="@color/graphLine"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <View style="@style/space_hori" />

                                <TextView
                                    android:id="@+id/paraMessage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/_1_15"
