            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#444444"
            android:gravity="center">

            <TextView
                android:id="@+id/statMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demo_text_status"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/m_none_fragItemBase"
        android:layout_height="216dp"
        android:background="@drawable/table_row_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/fragItemTitleBase">

                <TextView
                    android:id="@+id/titleRecord"
                    style="@style/fragItemTitleTxt"
                    android:text="@string/myRecord" />

                <View style="@style/fragItemTitleUL" />
            </LinearLayout>

            <View style="@style/space_hori" />

            <LinearLayout
                android:id="@+id/btnRecordDetail"
                style="@style/fragItemDetailBase">

                <TextView
                    android:id="@+id/txtDetail2"
                    style="@style/fragItemDetailTxt" />

                <ImageView style="@style/fragItemDetailArrow" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout style="@style/fragMyRecordCircleBase">

                <LinearLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@drawable/record_circle1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/speedFast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="336"
                        android:textColor="@color/colorBlack"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/ms1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ms"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtSpeedFast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/my_fastest_speed"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout style="@style/fragMyRecordCircleBase">

                <LinearLayout
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@drawable/record_circle2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/speedAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="336"
                        android:textColor="@color/colorBlack"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/ms2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ms"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtSpeedAvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/my_average_speed"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/m_none_fragItemBase"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_ad"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/img_demo3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@color/colorMint"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="SwingBeat (AD)"/>

    </LinearLayout>

    <LinearLayout
        style="@style/m_none_fragItemBase"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnNotice"
                    style="@style/myRecordFragScrollBtn"
                    android:layout_marginLeft="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_notice" />

                        <TextView
                            android:id="@+id/noticeAlert"
                            style="@style/itemNewAlertBase"
                            android:layout_margin="5dp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/btnTxtNotice"
                        style="@style/btnBottomBaseItems"
                        android:text="@string/notice" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMessage"
                    style="@style/myRecordFragScrollBtn">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_message" />

                        <TextView
                            android:id="@+id/messageAlert"
                            style="@style/itemNewAlertBase"
                            android:layout_margin="5dp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/btnTxtMessage"
                        style="@style/btnBottomBaseItems"
                        android:text="@string/message" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAccount"
                    style="@style/myRecordFragScrollBtn">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_account" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/btnTxtAccount"
                        style="@style/btnBottomBaseItems"
                        android:text="@string/personal_account" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <include layout="@layout/common_footer"/>

</LinearLayout>