<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCommonBack"
    android:orientation="vertical">

    <LinearLayout
        style="@style/m_none_fragItemBase"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/fragItemTitleBase">

                <TextView
                    android:id="@+id/titleStat"
                    style="@style/fragItemTitleTxt"
                    android:text="@string/statistic" />

                <View style="@style/fragItemTitleUL" />
            </LinearLayout>

            <View style="@style/space_hori" />

            <LinearLayout
                android:id="@+id/btnStatDetail"
                style="@style/fragItemDetailBase">

                <TextView
                    android:id="@+id/txtDetail1"
                    style="@style/fragItemDetailTxt" />

                <ImageView style="@style/fragItemDetailArrow" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/txtNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="표시 가능한 데이터가 없습니다."/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/graphBase" />

            <LinearLayout
                android:id="@+id/graphBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/para1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/domainBase"
                    android:textColor="@color/graphLine"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View style="@style/space_hori" />

                <TextView
                    android:id="@+id/paraMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
